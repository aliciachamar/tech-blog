<h2>Create a New Post</h2>
<form action="/api/posts" method="POST">
    <label for="title">Post Title:</label>
    <input type="text" name="title" id="title">
    <br>
    <label for="text">Post Text:</label>
    <textarea name="text" id="text" cols="50" rows="10"></textarea>
    <br>
    <input type="submit" id="submit">
</form>
<hr>
<h2>Existing Posts:</h2>
{{#each posts as |post|}}
<div>
    <h3><a href="/api/posts/{{post.id}}">{{post.title}}</a></h3>
    <h5>{{post.dateCreated}}</h5>
    <button><a href="/api/posts/update/{{post.id}}">Update</a></button>
    <button class="delete" id="{{post.id}}">Delete</button>
    <hr>
</div>
{{/each}}

<script src="/js/dashboard.js"></script>    