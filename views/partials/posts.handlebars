{{#each posts as |post|}}
<div>
    <h2>{{post.title}}</h2>
    <h4>{{post.user.username}}</h4>
    <h5>{{post.dateCreated}}</h5>
    <p>{{post.text}}</p>
    <h3>Comments:</h3>
    {{#each post.comments as |comment|}}
    <p>On {{comment.dateCreated}}, {{comment.user.username}} said: <br>
    {{comment.text}}
    </p>
    <br>
    {{/each}}
    <form method="post" action="/api/comments/{{post.id}}">
        <textarea name="newComment" id="newComment" cols="50" rows="5" placeholder="Leave a comment..."></textarea>
        <input type="submit" value="submit">
    </form>
    <hr>
</div>
{{/each}}